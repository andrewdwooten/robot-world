<h1>My Robots</h1>
<h2><a href='/new_robot'> Add a New Robot</a></h2>
<h5><a href='/daleks'>Destroy the Daleks!!</a></h5>
<% @robots.each do |robot| %>
  <img src='https://robohash.org/<%= robot.name %>'</img>
  <h3><%= robot.id%>. <a href="/robots/<%= robot.id %>"><%= robot.name%></a></h3>
  <p><%= robot.city%>,<%= robot.state%></p>
  <p><%= robot.dept%></p>
  <a href="/robots/<%= robot.id %>/edit">Edit</a>
  <form action="/robots/<%= robot.id %>" method="POST">
    <input type="hidden" name="_method" value="DELETE">
    <input type="submit" value="delete" />
  </form>
<% end %>
