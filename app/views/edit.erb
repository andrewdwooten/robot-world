<form action="/robots/<%= @robot.id %>" method="post">
  <p>Edit this robots info here:</p>
  <input type="hidden" name="_method" value="PUT" />
  Name:<input type='text' name='robot[name]' value="<%= @robot.name%>"/>"<br/>
  City:<input type='text' name='robot[city]' value="<%= @robot.city%>"/>"<br/>
  State:<input type='text' name='robot[state]' value="<%= @robot.state%>"/>"<br/>
  Department:<input type='text' name='robot[department]'value="<%= @robot.dept%>"/><br/>
  <input type='submit'/>
</form>
